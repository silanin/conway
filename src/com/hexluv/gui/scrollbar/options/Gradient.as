package com.hexluv.gui.scrollbar.options {		import flash.display.*;	import flash.geom.*;		public class Gradient extends MovieClip {				private static var _gradient:String;		private static var _upGradient:Shape;		private static var _downGradient:Shape;		private static var _scrubberGradient:Shape;		private static var _matrix:Matrix;		private static var _colors:Array;		private static var _alphas:Array;		private static var _ratios:Array;		public var _gShape:Shape;				public function Gradient($s:Shape, $t:uint, $c:uint):void {						//Gradient Properties						_matrix = new Matrix();			_gradient = GradientType.LINEAR;			_colors = [$t, 0x000000];			_alphas = [0, 0.3];			_ratios = [0, 255];						//Gradient Matrix						_matrix.createGradientBox($s.width, $s.height, deg2rad(90), 0, 0);						//Gradient Fills						_gShape = new Shape();						_gShape.graphics.beginGradientFill(_gradient, _colors, _alphas, _ratios, _matrix);						_gShape.graphics.drawRoundRect(0, 0, $s.width, $s.height, $c);					}				private function deg2rad(deg:Number):Number {			return deg * (Math.PI/180);		}				}	}